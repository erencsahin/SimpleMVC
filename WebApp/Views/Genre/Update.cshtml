@model Genre

<form method="post">
    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">
                Update Genre
            </h2>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success" style="width:150px">Update Genre</button>
        <a asp-controller="Genre" asp-action="Index" class="btn btn-info" style="width:150px">Back</a>

    </div>
</form>
